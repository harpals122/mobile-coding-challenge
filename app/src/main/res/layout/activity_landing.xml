<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_centerVertical="true"
    android:background="@color/gray_color"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="1">


    <LinearLayout
        android:id="@+id/logoLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_weight="0.6"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_promo_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="Passion For Fashion "
            android:textColor="@color/hint_color_green"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/logoLayout"
        android:layout_margin="1dp"

        android:layout_weight="0.5"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/btnSignUps"
            style="@style/btnFillSelection_purpleStroke"
            android:layout_width="match_parent"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnSignIns"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/value_20dp"
            android:onClick="SignUps"
            android:text="@string/sign_up_string" />

        <TextView
            android:id="@+id/btnSignIns"
            style="@style/btnFillSelection_purpleStroke"
            android:layout_width="match_parent"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnSignIns"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btnSignUp"
            android:layout_marginTop="10dp"
            android:onClick="SignIns"
            android:text="Sign In" />

        <TextView
            android:id="@+id/btnSeeFirst"
            style="@style/btnFillSelection_purpleStroke"
            android:layout_width="match_parent"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/btnSignUp"
            android:onClick="Skip"
            android:text="Skip" />



    </LinearLayout>


</LinearLayout>