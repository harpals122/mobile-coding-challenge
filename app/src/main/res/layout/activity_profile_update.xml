<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/crossImgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="@dimen/value_20dp"
        android:src="@drawable/ic_cross_normal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crossImgView"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/value_20dp"
        android:id="@+id/img"
        android:src="@drawable/ic_promo_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:layout_below="@+id/img"
        android:paddingRight="40dp">

        <com.trending.trending_bucket.util.FloatLabel
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:capitalize="sentences"
            android:hint="first name"
            android:inputType="textPersonName"
            android:textColorHint="@color/purple_color_2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/value_20dp"
            android:layout_marginTop="@dimen/value_5dp"
            android:background="@color/bar_color" />

        <com.trending.trending_bucket.util.FloatLabel
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:capitalize="sentences"
            android:hint="last name"
            android:inputType="textPersonName"
            android:textColorHint="@color/purple_color_2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/value_20dp"
            android:layout_marginTop="@dimen/value_5dp"
            android:background="@color/bar_color" />

        <com.trending.trending_bucket.util.FloatLabel
            android:id="@+id/etMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:inputType="phone"
            android:textColorHint="@color/purple_color_2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/value_20dp"
            android:layout_marginTop="@dimen/value_5dp"
            android:background="@color/bar_color" />

        <com.trending.trending_bucket.util.FloatLabel
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/purple_color_2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/value_20dp"
            android:layout_marginTop="@dimen/value_5dp"
            android:background="@color/bar_color" />

        <TextView
            android:id="@+id/btnUpdate"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/btnSelection"
            android:text="@string/update_string"/>

    </LinearLayout>


</RelativeLayout>