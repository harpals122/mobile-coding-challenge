<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"

            android:contentDescription="logo_trending"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_promo_logo" />

        <!--  Name Label -->
        <com.trending.trending_bucket.util.FloatLabel
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:hint="First Name"
            app:floatLabelColor="@color/blue"
            android:textColorHint="@color/blue"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:background="@color/blue" />


        <!--  Last Name Label -->
        <com.trending.trending_bucket.util.FloatLabel
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:hint="Last Name"
            app:floatLabelColor="@color/blue"
            android:textColorHint="@color/blue"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:background="@color/blue" />


        <!-- Email Label -->
        <com.trending.trending_bucket.util.FloatLabel
            android:id="@+id/etUsermail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:hint="Email"
            app:floatLabelColor="@color/blue"
            android:textColorHint="@color/blue"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:background="@color/blue" />

        <!--  Last Name Label -->
        <com.trending.trending_bucket.util.FloatLabel
            android:id="@+id/etMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            app:floatLabelColor="@color/blue"
            android:hint="Mobile Number"
            android:textColorHint="@color/blue"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:background="@color/blue" />


        <!-- Password Label -->
        <com.trending.trending_bucket.util.FloatLabel
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            app:floatLabelColor="@color/blue"
            android:hint="Password"
            android:inputType="text"
            android:textColorHint="@color/blue"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:background="@color/blue" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/policy"
            android:textColor="@color/blue"
            android:textSize="13sp" />

        <!-- Signup Button -->

        <TextView
            android:id="@+id/btnSignUpz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            style="@style/btnSelection"
            android:text="@string/sign_up_string"
            android:padding="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/blue"/>




    </LinearLayout>
</ScrollView>